# Development Dockerfile for Legalis-RS
# Optimized for fast iteration with cargo-watch

FROM rust:1.83-bookworm

# Install development dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for auto-reload
RUN cargo install cargo-watch

# Create app directory
WORKDIR /app

# Pre-compile dependencies (will be cached if Cargo.toml doesn't change)
COPY Cargo.toml Cargo.lock ./
COPY .cargo ./.cargo
RUN mkdir -p crates/legalis-core/src && \
    echo "fn main() {}" > crates/legalis-core/src/lib.rs && \
    cargo build --release && \
    rm -rf crates

# Source code will be mounted as a volume in docker-compose.dev.yml

# Expose ports
EXPOSE 3000 5000

# Default command (overridden in docker-compose.dev.yml)
CMD ["cargo", "watch", "-x", "run --bin legalis-api-server"]
